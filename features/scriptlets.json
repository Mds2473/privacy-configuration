{
    "_meta": {
        "description": "Run Adguard scriptlets."
    },
    "state": "enabled",
    "exceptions": [],
    "settings": {
        "scriptlets": [
            {
                "name": "trustedSetAttr",
                "attrs": {
                    "selector": "a",
                    "attr": "href",
                    "value": "#"
                }
            },
            {
                "name": "setCookie",
                "attrs": {
                    "domain": "example.com",
                    "name": "test",
                    "value": "accepted"
                }
            },
            {
                "name": "removeCookie",
                "attrs": {
                    "domain": "example.com",
                    "match": "bloop"
                }
            },
            {
                "name": "setConstant",
                "attrs": {
                    "property": "test",
                    "value": "no"
                }
            },
            {
                "name": "trustedReplaceNodeText",
                "attrs": {
                    "nodeName": "a",
                    "textMatch": "More information...",
                    "pattern": "...",
                    "replacement": "!",
                    "extraArgs": ["verbose"]
                }
            },
            {
                "name": "abortCurrentInlineScript",
                "attrs": {
                    "property": "test",
                    "search": "test"
                }
            },
            {
                "name": "abortOnPropertyRead",
                "attrs": {
                    "property": "test"
                }
            },
            {
                "name": "abortOnPropertyWrite",
                "attrs": {
                    "property": "test"
                }
            }
        ],
        "conditionalChanges": [
            {
                "condition": {
                    "type": "url",
                    "url": {
                        "match": "xnxx.com"
                    }
                },
                "changes": [
                    {
                        "op": "add",
                        "path": "/scriptlets/-",
                        "value": {
                            "name": "preventAddEventListener",
                            "attrs": {
                                "typeSearch": "DOMContentLoaded",
                                "listenerSearch": "/dyn\\.ads|loadAdsDelayed/"
                            }
                        }
                    },
                    {
                        "op": "add",
                        "path": "/scriptlets/-",
                        "value": {
                            "name": "setConstant",
                            "attrs": {
                                "property": "xv.sda.pp.init",
                                "value": "noopFunc"
                            }
                        }
                    }
                ]
            }
        ]
    }
}
